---
// Team Component - Frame 29 Design
const teamMembers = [
  {
    name: "Dr. James Patel",
    role: "Pediatric Dentist",
    description: "University of Southern California (USC), 10 years of experience specializing in braces."
  },
  {
    name: "Dr. Emily Turner",
    role: "Lead Dentist & Cosmetic Specialist",
    description: "Certified in Advanced Cosmetic Dentistry, Over 12 years of experience in cosmetic."
  },
  {
    name: "Dr. Michael Anderson",
    role: "Restorative & Implant Specialist",
    description: "Fellowship in Implant Dentistry, (ICOI), 15 years of experience in dental implants."
  }
];
---

<section id="team" class="team-section section-padding">
  <div class="container-custom">
    <div class="section-header">
      <div>
        <h2 class="section-title">Meet the Dentist</h2>
        <p class="section-subtitle">Our Trusted Dental Experts</p>
      </div>
      <div class="nav-arrows">
        <button class="nav-arrow prev" aria-label="Previous">
          <svg width="20" height="20" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd"/>
          </svg>
        </button>
        <button class="nav-arrow next" aria-label="Next">
          <svg width="20" height="20" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
          </svg>
        </button>
      </div>
    </div>

    <div class="team-grid">
      {teamMembers.map((member) => (
        <div class="team-card">
          <div class="team-image">
            <svg width="100%" height="280" viewBox="0 0 320 280" fill="none">
              <rect width="320" height="280" rx="16" fill="#F3F4F6"/>
              <circle cx="160" cy="100" r="50" fill="#E5E7EB"/>
              <circle cx="160" cy="95" r="35" fill="#D1D5DB"/>
              <path d="M160 125C135 125 115 145 115 170V240H205V170C205 145 185 125 160 125Z" fill="#D1D5DB"/>
            </svg>
          </div>
          <div class="team-content">
            <h3>{member.name}</h3>
            <p class="team-role">{member.role}</p>
            <p class="team-desc">{member.description}</p>
            <div class="team-socials">
              <a href="#" class="social-link" aria-label="Facebook">
                <svg width="16" height="16" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                </svg>
              </a>
              <a href="#" class="social-link" aria-label="LinkedIn">
                <svg width="16" height="16" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                </svg>
              </a>
              <a href="#" class="social-link" aria-label="Twitter">
                <svg width="16" height="16" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                </svg>
              </a>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .team-section {
    background: var(--bg-secondary);
  }

  .section-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 50px;
  }

  .section-title {
    font-size: 36px;
    font-weight: 800;
    color: var(--text-primary);
    margin-bottom: 8px;
  }

  .section-subtitle {
    font-size: 15px;
    color: var(--text-secondary);
  }

  .nav-arrows {
    display: flex;
    gap: 12px;
  }

  .nav-arrow {
    width: 48px;
    height: 48px;
    border-radius: 50%;
    border: 2px solid var(--border);
    background: var(--bg-primary);
    color: var(--text-secondary);
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .nav-arrow:hover {
    border-color: var(--primary);
    color: var(--primary);
  }

  .nav-arrow.next {
    border-color: var(--primary);
    color: var(--primary);
  }

  .team-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 30px;
  }

  .team-card {
    background: var(--bg-primary);
    border-radius: var(--radius-lg);
    overflow: hidden;
    border: 1px solid var(--border);
    transition: all 0.3s ease;
  }

  .team-card:hover {
    box-shadow: var(--shadow-lg);
    transform: translateY(-4px);
  }

  .team-content {
    padding: 24px 20px;
  }

  .team-content h3 {
    font-size: 18px;
    font-weight: 700;
    color: var(--text-primary);
    margin-bottom: 6px;
  }

  .team-role {
    font-size: 14px;
    color: var(--text-secondary);
    font-weight: 500;
    margin-bottom: 12px;
  }

  .team-desc {
    font-size: 13px;
    color: var(--text-light);
    line-height: 1.6;
    margin-bottom: 16px;
  }

  .team-socials {
    display: flex;
    gap: 10px;
  }

  .social-link {
    width: 32px;
    height: 32px;
    border-radius: var(--radius-sm);
    background: var(--bg-gray);
    color: var(--text-secondary);
    display: flex;
    align-items: center;
    justify-content: center;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .social-link:hover {
    background: var(--primary);
    color: white;
  }

  @media (max-width: 968px) {
    .team-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 24px;
    }

    .section-header {
      flex-direction: column;
      gap: 20px;
    }
  }

  @media (max-width: 640px) {
    .team-grid {
      grid-template-columns: 1fr;
    }

    .section-title {
      font-size: 30px;
    }
  }
</style>
