---
// Info Cards Component - Frame 153 Design
---

<section class="info-cards-section">
  <div class="container-custom">
    <div class="info-cards-grid">
      <!-- Open Hours Card -->
      <div class="info-card">
        <div class="card-icon">
          <svg width="32" height="32" fill="var(--primary)" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"/>
          </svg>
        </div>
        <h3>Open Hours</h3>
        <p class="time-info">Mon to Fri</p>
        <p class="time-detail">(9:00 am to 9:00 pm)</p>
      </div>

      <!-- Contact Us Card -->
      <div class="info-card">
        <div class="card-icon">
          <svg width="32" height="32" fill="var(--primary)" viewBox="0 0 20 20">
            <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"/>
          </svg>
        </div>
        <h3>Contact Us</h3>
        <p class="contact-info">+098438402984</p>
        <p class="contact-email">dentist@do.com</p>
      </div>

      <!-- Doctor/Service Selection Card -->
      <div class="info-card selection-card">
        <div class="card-icon">
          <svg width="32" height="32" fill="var(--primary)" viewBox="0 0 20 20">
            <path d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z"/>
          </svg>
        </div>
        <h3>Doctor, Service</h3>
        <div class="selection-inputs">
          <select class="select-input">
            <option>Doctor</option>
          </select>
          <select class="select-input">
            <option>Service</option>
          </select>
        </div>
        <a href="#appointment" class="btn-appointment-full">
          Make An Appointment
          <svg width="16" height="16" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd"/>
          </svg>
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  .info-cards-section {
    padding: 40px 0;
    background: var(--bg-gray);
  }

  .info-cards-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 24px;
  }

  .info-card {
    background: white;
    border-radius: var(--radius-lg);
    padding: 32px 28px;
    box-shadow: var(--shadow-sm);
    transition: all 0.3s ease;
  }

  .info-card:hover {
    box-shadow: var(--shadow-md);
    transform: translateY(-2px);
  }

  .card-icon {
    width: 56px;
    height: 56px;
    background: #EFF6FF;
    border-radius: var(--radius-md);
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 20px;
  }

  .info-card h3 {
    font-size: 18px;
    font-weight: 700;
    color: var(--text-primary);
    margin-bottom: 12px;
  }

  .time-info,
  .contact-info {
    font-size: 15px;
    color: var(--text-primary);
    font-weight: 500;
    margin-bottom: 4px;
  }

  .time-detail,
  .contact-email {
    font-size: 14px;
    color: var(--text-secondary);
  }

  .selection-inputs {
    display: flex;
    flex-direction: column;
    gap: 12px;
    margin-bottom: 20px;
  }

  .select-input {
    width: 100%;
    padding: 12px 16px;
    border: 1px solid var(--border);
    border-radius: var(--radius-sm);
    font-size: 14px;
    color: var(--text-secondary);
    background: white;
    cursor: pointer;
    transition: border-color 0.3s ease;
  }

  .select-input:hover,
  .select-input:focus {
    border-color: var(--primary);
    outline: none;
  }

  .btn-appointment-full {
    width: 100%;
    background: var(--primary);
    color: white;
    padding: 12px 20px;
    border-radius: var(--radius-md);
    text-decoration: none;
    font-weight: 600;
    font-size: 14px;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    transition: all 0.3s ease;
  }

  .btn-appointment-full:hover {
    background: var(--primary-hover);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(25, 84, 179, 0.3);
  }

  @media (max-width: 968px) {
    .info-cards-grid {
      grid-template-columns: 1fr;
      gap: 20px;
    }
  }
</style>
